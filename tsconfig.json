{
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true,
    "compilerOptions": {
      "target":"ES2020",
      "module":"CommonJS",
      "moduleResolution": "node",
      "typeRoots": [
        "./node_modules/@types"
      ],
      "types": ["node", "mocha"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "allowJs": true,
      "lib": [
        "es2017",
        "dom"
       ]
  }
}